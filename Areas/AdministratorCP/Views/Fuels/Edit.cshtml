@model BookCarProject.Models.Fuel

@{
    ViewBag.Title = "Edit Fuels";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-uppercase text-center mt-5">Chỉnh sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="text-uppercase text-center">nhiên liệu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FuelsId)

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NameFuel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.LabelFor(model => model.NameFuel, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.ValidationMessageFor(model => model.NameFuel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
